<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="DashboardController"
            prefWidth="950" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom right, #0f0f23, #1a1a2e, #16213e);">

    <!-- MAIN CONTAINER -->
    <VBox fx:id="mainContainer" spacing="12" alignment="TOP_CENTER"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
        </padding>

        <!-- HEADER -->
        <HBox spacing="10" alignment="CENTER_RIGHT" prefHeight="48"
              style="-fx-background-color: rgba(0, 212, 255, 0.1); -fx-background-radius: 10; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 8;">
            <Label text="First National Bank Botswana"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #00d4ff; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.3), 10, 0.5, 0, 0);"
                   HBox.hgrow="ALWAYS"/>
            <Label fx:id="usernameLabel" text="Welcome, Guest"
                   style="-fx-text-fill: #64ffda; -fx-font-size: 13; -fx-font-weight: bold;"/>
            <Button text="Logout" onAction="#handleLogout" fx:id="logoutBtn"
                    style="-fx-background-color: transparent; -fx-text-fill: #64ffda; -fx-border-color: #64ffda; -fx-border-width: 1; -fx-border-radius: 15; -fx-font-weight: bold; -fx-pref-width: 80; -fx-pref-height: 30;"/>
        </HBox>

        <!-- ACCOUNT SUMMARY + SELECTOR -->
        <HBox spacing="12" alignment="CENTER_LEFT"
              style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 10; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 12;">
            <VBox spacing="6">
                <Label text="Select Account:" style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
                <ComboBox fx:id="accountsCombo" prefWidth="320" onAction="#handleAccountSelection"
                          style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="6" style="-fx-padding:6;">
                <Label fx:id="accountNumberLabel" text="Account Number: -" style="-fx-text-fill: white;"/>
                <Label fx:id="accountTypeLabel" text="Account Type: -" style="-fx-text-fill: white;"/>
                <Label fx:id="balanceLabel" text="Balance: P 0.00"
                       style="-fx-font-weight:bold; -fx-text-fill: #64ffda; -fx-font-size: 14;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Open New Account" onAction="#handleOpenAccount"
                    style="-fx-background-color: linear-gradient(to right, #00d4ff, #0077ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.4), 10, 0.3, 0, 2);"/>
        </HBox>

        <!-- QUICK ACTIONS -->
        <HBox spacing="10" alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 10; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 12;">
            <Button text="Deposit" onAction="#handleDepositFunds" fx:id="depositBtn"
                    style="-fx-background-color: linear-gradient(to right, #00d4ff, #0077ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-width: 100; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.4), 10, 0.3, 0, 2);"/>
            <Button text="Withdraw" onAction="#handleWithdrawFunds" fx:id="withdrawBtn"
                    style="-fx-background-color: linear-gradient(to right, #00d4ff, #0077ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-width: 100; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.4), 10, 0.3, 0, 2);"/>
            <Button text="Transfer" onAction="#handleTransferFunds" fx:id="transferBtn"
                    style="-fx-background-color: linear-gradient(to right, #00d4ff, #0077ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-width: 100; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.4), 10, 0.3, 0, 2);"/>
            <Button text="Pay Monthly Interest" onAction="#handlePayInterest" fx:id="interestBtn"
                    style="-fx-background-color: linear-gradient(to right, #64ffda, #00b894); -fx-text-fill: #0f0f23; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-width: 160; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(100,255,218,0.4), 10, 0.3, 0, 2);"/>
            <Button text="View All Accounts" onAction="#handleViewAccounts" fx:id="viewAccountsBtn"
                    style="-fx-background-color: transparent; -fx-text-fill: #64ffda; -fx-border-color: #64ffda; -fx-border-width: 1; -fx-border-radius: 15; -fx-font-weight: bold; -fx-pref-width: 140; -fx-pref-height: 35;"/>
        </HBox>

        <!-- RECENT TRANSACTIONS TABLE -->
        <TitledPane text="Recent Transactions" expanded="true"
                    style="-fx-text-fill: #00d4ff; -fx-font-weight: bold; -fx-font-size: 13; -fx-background-color: transparent;"
                    prefHeight="320" prefWidth="900">
            <TableView fx:id="transactionsTable" prefHeight="300"
                       style="-fx-background-color: rgba(255,255,255,0.05); -fx-border-color: #00d4ff; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="140"
                                 style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="360"
                                 style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="amountColumn" text="Amount (P)" prefWidth="120"
                                 style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"
                                 style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="balanceColumn" text="Balance (P)" prefWidth="140"
                                 style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
                </columns>
            </TableView>
        </TitledPane>

        <Label text="Â© 2025 First National Bank Botswana | All Rights Reserved"
               style="-fx-font-size: 11; -fx-text-fill: #888; -fx-padding: 10 0 0 0;" />

    </VBox>

</AnchorPane>