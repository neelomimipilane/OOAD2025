<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #0f0f23, #1a1a2e, #16213e);">

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
          style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 40; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 15;">

        <!-- Header with updated title and slogan -->
        <VBox spacing="8" alignment="CENTER">
            <Label text="First National Bank Botswana"
                   style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #00d4ff; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.3), 10, 0.5, 0, 0);"/>

            <Label text="Login with Customer ID or Email"
                   style="-fx-font-size: 14; -fx-text-fill: #64ffda; -fx-font-weight: bold; -fx-font-style: italic;"/>
        </VBox>

        <!-- Form Container -->
        <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20 0 0 0;">
            <Label text="CUSTOMER ID OR EMAIL" style="-fx-text-fill: #64ffda; -fx-font-size: 12; -fx-font-weight: bold;"/>
            <TextField fx:id="customerIdField" promptText="Enter Customer ID or Email"
                       style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #00d4ff; -fx-border-width: 0 0 1 0; -fx-background-radius: 5; -fx-pref-height: 35; -fx-pref-width: 250;"/>

            <Label text="PASSWORD" style="-fx-text-fill: #64ffda; -fx-font-size: 12; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
            <PasswordField fx:id="passwordField" promptText="Enter Password"
                           style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #00d4ff; -fx-border-width: 0 0 1 0; -fx-background-radius: 5; -fx-pref-height: 35; -fx-pref-width: 250;"/>
        </VBox>

        <!-- Buttons with techy styling -->
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 25 0 0 0;">
            <Button fx:id="loginButton" text="LOGIN" onAction="#handleLogin"
                    style="-fx-background-color: linear-gradient(to right, #00d4ff, #0077ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-pref-width: 120; -fx-pref-height: 40; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.4), 10, 0.3, 0, 2);"/>

            <Button text="REGISTER" onAction="#handleRegister"
                    style="-fx-background-color: transparent; -fx-text-fill: #64ffda; -fx-border-color: #64ffda; -fx-border-width: 2; -fx-border-radius: 25; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;"/>
        </HBox>

        <!-- Forgot credentials link -->
        <Button text="Forgot Customer ID or Password?" onAction="#handleForgotCredentials"
                style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-underline: true; -fx-font-size: 11; -fx-padding: 10 0 0 0;"/>

        <!-- Footer note -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Login Options: Customer ID • Email"
                   style="-fx-text-fill: #64ffda; -fx-font-size: 10; -fx-font-weight: bold;"/>
            <Label text="Secure • Fast • Reliable"
                   style="-fx-text-fill: #888; -fx-font-size: 10;"/>
        </VBox>

    </VBox>

</AnchorPane>