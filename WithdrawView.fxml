<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="WithdrawController" spacing="15" alignment="TOP_CENTER"
      prefWidth="450" prefHeight="350"
      style="-fx-background-color: linear-gradient(to bottom right, #0f0f23, #1a1a2e, #16213e); -fx-padding: 20; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10;">

    <!-- Header -->
    <Label fx:id="titleLabel" text="Withdraw Funds"
           style="-fx-text-fill: #00d4ff; -fx-font-size: 20; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.3), 10, 0.5, 0, 0);"/>

    <!-- Account Info -->
    <VBox spacing="8" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10;">
        <Label fx:id="accountInfoLabel" text="-" style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
        <Label fx:id="balanceLabel" text="-" style="-fx-text-fill: white;"/>
    </VBox>

    <!-- Withdraw Form -->
    <VBox spacing="12" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10;">

        <!-- Amount -->
        <Label text="Amount (P):" style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
        <TextField fx:id="amountField" promptText="Enter amount to withdraw"
                   style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #00d4ff; -fx-border-width: 0 0 1 0; -fx-background-radius: 5; -fx-pref-height: 35;"/>

        <!-- Description -->
        <Label text="Description:" style="-fx-text-fill: #64ffda; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
        <TextField fx:id="descriptionField" promptText="Optional description"
                   style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #00d4ff; -fx-border-width: 0 0 1 0; -fx-background-radius: 5; -fx-pref-height: 35;"/>

        <!-- Status Message -->
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: #ff6b6b; -fx-font-size: 12; -fx-padding: 5 0 0 0;" visible="false"/>
    </VBox>

    <!-- Quick Amount Buttons -->
    <VBox spacing="8">
        <Label text="Quick Withdraw:" style="-fx-text-fill: #64ffda; -fx-font-weight: bold;"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="P 100" onAction="#handleQuickAmount" userData="100"
                    style="-fx-background-color: rgba(0,212,255,0.2); -fx-text-fill: #00d4ff; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10; -fx-pref-width: 70; -fx-pref-height: 30;"/>
            <Button text="P 500" onAction="#handleQuickAmount" userData="500"
                    style="-fx-background-color: rgba(0,212,255,0.2); -fx-text-fill: #00d4ff; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10; -fx-pref-width: 70; -fx-pref-height: 30;"/>
            <Button text="P 1000" onAction="#handleQuickAmount" userData="1000"
                    style="-fx-background-color: rgba(0,212,255,0.2); -fx-text-fill: #00d4ff; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 10; -fx-pref-width: 70; -fx-pref-height: 30;"/>
        </HBox>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Withdraw" onAction="#handleWithdraw" fx:id="withdrawBtn"
                style="-fx-background-color: linear-gradient(to right, #00d4ff, #0077ff); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-width: 120; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,212,255,0.4), 10, 0.3, 0, 2);"/>
        <Button text="Back" onAction="#handleBack"
                style="-fx-background-color: transparent; -fx-text-fill: #64ffda; -fx-border-color: #64ffda; -fx-border-width: 1; -fx-border-radius: 15; -fx-font-weight: bold; -fx-pref-width: 80; -fx-pref-height: 35;"/>
    </HBox>
</VBox>