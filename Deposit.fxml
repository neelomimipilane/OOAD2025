<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="DepositController" spacing="15" alignment="CENTER" prefWidth="400" prefHeight="200">
    <Label fx:id="titleLabel" text="Deposit Funds"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Amount:"/>
        <TextField fx:id="amountField" promptText="Enter amount" prefWidth="150"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Deposit" onAction="#handleDeposit"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>
</VBox>